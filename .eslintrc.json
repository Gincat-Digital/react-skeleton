{
 "extends": [
  "plugin:storybook/recommended",
  "@gincat-digital/eslint-config-base"
 ],
 "rules": {
  "no-duplicate-imports": "off",
  "@typescript-eslint/naming-convention": [
   "error",
   {
    "selector": "default",
    "format": [
     "camelCase"
    ]
   },
   {
    "selector": "import",
    "format": [
     "camelCase",
     "PascalCase"
    ]
   },
   {
    "selector": "variable",
    "format": [
     "camelCase",
     "PascalCase",
     "UPPER_CASE"
    ]
   },
   {
    "selector": [
     "typeLike",
     "enumMember"
    ],
    "format": [
     "PascalCase"
    ]
   }
  ]
 }
}
